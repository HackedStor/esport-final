{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "target": "es2016",
    "module": "commonjs",
    "jsx": "react-jsx",
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist"  // Ajout d'un dossier de sortie pour les fichiers compilés
  },
  "include": [
    "src/**/*"  // Précise tous les fichiers dans le dossier src et ses sous-dossiers
  ],
  "exclude": [
    "node_modules",
    "dist"  // Exclut le dossier de sortie pour éviter la redondance
  ]
}
